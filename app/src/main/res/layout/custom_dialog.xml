<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="350dp"
	android:layout_height="230dp"
	android:layout_gravity="center"
	android:elevation="10dp"
	android:transitionName="transitioCardView"
	app:cardCornerRadius="12dp">

	<View
		android:id="@+id/background_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/desert" />

	<com.example.gboard.font.AppFontTextView
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="15dp"
		android:background="@android:color/transparent"
		android:gravity="center"
		android:shadowColor="@color/black"
		android:shadowDx="4"
		android:shadowDy="4"
		android:shadowRadius="2"
		android:text="Choose Mode"
		android:textColor="@color/white"
		android:textSize="30dp" />

	<com.example.gboard.font.AppFontButton
		android:id="@+id/startSinglePlayer"
		android:layout_width="117dp"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginStart="20dp"
		android:layout_marginBottom="30dp"
		android:background="@drawable/custom_button"
		android:text="Single Player"
		android:textColor="@color/white" />

	<com.example.gboard.font.AppFontButton
		android:id="@+id/startMultiPlayer"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:layout_gravity="end | bottom"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="30dp"
		android:background="@drawable/custom_button2"
		android:text="Multi Player"
		android:textColor="@color/white" />
</androidx.cardview.widget.CardView>


