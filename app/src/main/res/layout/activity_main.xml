<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background"
	tools:context=".activities.MainActivity">

	<ImageView
		android:id="@+id/gameTittle"
		android:layout_width="wrap_content"
		android:layout_height="100dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20dp"
		android:src="@drawable/tittle" />

	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/pager_level_slider"
		android:layout_width="match_parent"
		android:layout_height="230dp"
		android:layout_centerInParent="true"
		android:paddingStart="250dp"
		android:paddingEnd="250dp" />

	<ImageView
		android:id="@+id/coin"
		android:layout_width="47dp"
		android:layout_height="32dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="10dp"
		android:layout_marginBottom="15dp"
		android:src="@drawable/ic_coin" />

	<com.example.gboard.font.AppFontTextView
		android:id="@+id/coin_nubmer"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dp"
		android:layout_toEndOf="@id/coin"
		android:gravity="center"
		android:padding="2dp"
		android:shadowColor="@color/black"
		android:shadowDx="4"
		android:shadowDy="4"
		android:shadowRadius="2"
		android:text="228"
		android:textColor="@color/white"
		android:textSize="20dp" />

	<ImageButton
		android:id="@+id/settings_button"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_setting_icon" />

</RelativeLayout>